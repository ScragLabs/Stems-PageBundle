{% extends stems_theme ~ '.html.twig' %}

{% block windowTitle %}{{ page.windowTitle }}{% endblock %}

{% block layout %}
   <div class="cms-page">
   		<div class="layout-banner">
   			<div class="banner-wrapper">
   				{% block banner %}<div class="banner" style="background-image:url('{{ getMediaImage(page.image).src|imagine_filter('page_banner') }}')">{% endblock %}
   				</div>
   				{% block title %}<h1>{{ page.title }}</h1>{% endblock %}
   			</div>
   			
        	<div class="wrap">
	        	
	        	<div class="section">
	            	{% block content %}
	            		{% if page.content is not empty %}<div class="section-content">{{ page.content|raw }}</div>{% endif %}
	            	{% endblock %}
	            </div>
				{% block dynamic %}{% endblock %}
			</div>
        </div>
    </div>
{% endblock %}