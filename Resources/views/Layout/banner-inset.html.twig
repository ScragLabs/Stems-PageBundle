{% extends stems_theme ~ '.html.twig' %}

{% import 'StemsCoreBundle:Macro:core.html.twig' as macros %}

{% block windowTitle %}{{ page.windowTitle }}{% endblock %}

{% block layout %}
    <div class="magazine-layout-inset">
        <div class="magazine-layout-inset__header-wrapper">
            {% block banner %}
                <div class="magazine-layout-inset__banner" style="background-image:url('{{ getMediaImage(page.image).src|imagine_filter('page_banner') }}')"></div>
                <div class="bmagazine-layout-inset__thumbnail" style="background-image:url('{{ getMediaImage(page.image).src|imagine_filter('page_banner') }}');background-size:cover;background-position:center;"></div>
                <div class="magazine-layout-inset__header-inset">
                    {% block title %}<h1>{{ page.title }}</h1>{% endblock %}
                    <hr>
                    {% block content %}
                        {% if page.content is not empty %}<p>{{ page.content|raw }}</p>{% endif %}
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
        <div class="container magazine-layout-inset__body-wrapper">
            {% block dynamic %}{% endblock %}
        </div>
    </div>
{% endblock %}