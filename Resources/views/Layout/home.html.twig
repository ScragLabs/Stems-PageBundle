{% extends stems_theme ~ '.html.twig' %}

{% block windowTitle %}{{ page.windowTitle }}{% endblock %}

{% block layout %}
	<div class="layout-homepage">
		<div class="homepage-banner">
			<div class="homepage-banner__background"></div>
			<h2 class="homepage-banner__title title-large-serif">Thread <span class="homepage-banner__title-ampersand">&amp;</span> Mirror</h2>
			<h1 class="homepage-banner__subtitle title-faded-sans">Fashion and Beauty</h1>
			{#<p class="homepage-banner__strapline title-italic-serif">created for you, curated by you</p>#}
		</div>
	   	<div>
			{{ render(controller('StemsBlogBundle:Widget:homepageFeature')) }}
			{{ render(controller('ThreadAndMirrorEditorsPicksBundle:Widget:editorsPicks')) }}
            {{ render(controller('StemsSocialBundle:Widget:homepageFeature')) }}
			{{ render(controller('ThreadAndMirrorSocialBundle:Widget:homepageFeature')) }}
            {% include 'ThreadAndMirrorCoreBundle:Widget:followUs.html.twig' %}
			{% block breadcrumbs %}{% endblock %}
			{% block title %}{% endblock %}
			{% block content %}{% endblock %}
			{% block dynamic %}{% endblock %}
		</div><!--content-->
	</div>
{% endblock %}