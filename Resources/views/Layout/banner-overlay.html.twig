{% extends stems_theme ~ '.html.twig' %}

{% import 'StemsCoreBundle:Macro:core.html.twig' as macros %}

{% block windowTitle %}{{ page.windowTitle }}{% endblock %}

{% block layout %}
    <div class="magazine-layout-banner">
        {% block banner %}
            <div class="magazine-layout-banner__banner-wrapper">
                <div class="magazine-layout-banner__banner" style="background-image:url('{{ getMediaImage(page.image).src|imagine_filter('page_banner') }}');background-size: cover;"></div>
                <div class="magazine-layout-banner__title-block">
                    {% block title %}<h1>{{ page.title }}</h1>{% endblock %}
                </div>
            </div>
        {% endblock %}
        <div class="magazine-layout-banner__content">
            {% block dynamic %}{% endblock %}
            {% block content %}
                    {% if page.content is not empty %}<p>{{ page.content|raw }}</p>{% endif %}
            {% endblock %}
        </div>
    </div>
{% endblock %}