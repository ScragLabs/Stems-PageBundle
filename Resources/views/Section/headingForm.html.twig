{% extends 'StemsPageBundle:Section:baseForm.html.twig' %}

{% block classes %}{% spaceless %}text-align-{{ form.vars.value.alignment }}{% endspaceless %}{% endblock %}

{% block tools %}
    {% include 'StemsPageBundle:Toolbox:sectionHeadingStyle.html.twig' %}
    {% include 'StemsPageBundle:Toolbox:sectionAlignment.html.twig' %}
{% endblock %}

{% block form %}
    {% include 'StemsPageBundle:Section:headingHiddenForm.html.twig' with { form: form } %}
{% endblock %}

{% block preview %}
	{{ form_widget(form.content, { attr: { class: form.vars.value.style ~ ' wysiwig-editor' }}) }}
	<{{ form.vars.value.style }} class="align-{{ section.alignment }}">{{ form.vars.value.content|raw }}</{{ form.vars.value.style }}>
{% endblock %}