{% extends 'StemsPageBundle:Section:base.html.twig' %}

{% block classes %}{% spaceless %}text-align-{{ section.alignment }} {{ section.style }}-list{% endspaceless %}{% endblock %}

{% block content %}
    <h5>{{ section.title }}</h5>
    <ul>
        {% for item in section.items %}
            <li>
                <p>{{ item|raw }}</p>
            </li>
        {% endfor %}
    </ul>
{%  endblock %}